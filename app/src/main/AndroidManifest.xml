<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.ace.qrb"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:name=".ApplicationImpl"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MoreInternalActivity"
            android:label="MoreInternal">
        </activity>
        <activity
            android:name=".activity.InternalActivity"
            android:label="Internal">
        </activity>
        <activity
            android:name=".activity.ZoneActivity"
            android:label="Zone"
            android:launchMode="singleTask"
            android:taskAffinity=".ZoneActivity">
        </activity>
        <activity
            android:name=".activity.SettingActivity"
            android:label="Setting"
            android:launchMode="singleTask"
            android:taskAffinity=".SettingActivity">
        </activity>
        <activity
            android:name=".activity.WalletActivity"
            android:label="Wallet"
            android:launchMode="singleTask"
            android:taskAffinity=".WalletActivity">
        </activity>
        <activity
            android:name=".activity.NearbyActivity"
            android:label="Nearby"
            android:launchMode="singleTask"
            android:taskAffinity=".NearbyActivity"
            android:theme="@style/Transparent">
        </activity>
        <activity
            android:name=".activity.MainActivity"
            android:label="Main">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>